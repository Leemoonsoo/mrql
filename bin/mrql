# run MRQL in Map-Reduce mode
#
#--------------------------------------------------------------------------------

# the MRQL installation directory
MRQL=$HOME/incubator-mrql

# choose the Hadoop installation:
#   tarball  (Hadoop tarball or Cloudera CDH3 tarball -- preferred)
#   package  (Cloudera CDH3 package-based 0.20.2)
INSTALLATION=tarball

# your Hadoop configuration directory
CONF=$MRQL/conf

if [ "$INSTALLATION" == "tarball" ]; then
  VERSION=1.0.3
  HADOOP=$HOME/hadoop-$VERSION
  CLASSPATH=$MRQL/lib/mrql.jar::$HADOOP/hadoop-core-$VERSION.jar:$HADOOP/lib/commons-cli-1.2.jar
else 
  HADOOP=/usr/lib/hadoop-0.20
  CLASSPATH=$MRQL/lib/mrql.jar:/usr/lib/hadoop-0.20/hadoop-core.jar:/usr/lib/hadoop-0.20/lib/commons-cli-1.2.jar
fi

export CLASSPATH

if [ "$1" == "-local" ] || [ "$1" == "-dist" ]; then
   EXEC="$HADOOP/bin/hadoop --config $CONF jar $MRQL/lib/mrql.jar"
else
   EXEC="java -ms256m -mx1024m"
fi

${EXEC} org.apache.mrql.Main $*
